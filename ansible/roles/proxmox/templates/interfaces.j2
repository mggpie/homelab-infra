# Bridge configuration for Proxmox VE
# VMs connect to vmbr0 and get IPs from the same network

auto lo
iface lo inet loopback

auto {{ pve_bridge_iface }}
iface {{ pve_bridge_iface }} inet manual

auto {{ pve_bridge_name }}
iface {{ pve_bridge_name }} inet static
    address {{ pve_bridge_address }}
    netmask {{ pve_bridge_netmask }}
    gateway {{ pve_bridge_gateway }}
    bridge-ports {{ pve_bridge_iface }}
    bridge-stp off
    bridge-fd 0
